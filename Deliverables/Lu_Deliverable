
import random as r

DECK = [value for value in range(1,14) for _ in range(0,4)]

r.shuffle(DECK)

CPU_HAND,P_HAND = (DECK[0:len(DECK)//2],DECK[len(DECK)//2:])


def call_bs(player_name, p_play, req_value):
    """determines whether a call from a player is true or false

    Args:
        player_name (str): the name of the player
        p_play (list): the hand that is played
        req_value (int): the desired card
    
    Returns:
        None
    """
    
    for i in p_play:
        
        if i != req_value:
            print(f"{player_name} called bs, and was correct!")
            #distribute_cards(P_HAND)
            return(None)
            
        else:
            pass
    print(f"{player_name} called bs, and was wrong...")
    #distribute_cards(CPU_HAND)
    return(None)

def cpu_play(req_value,cpu_hand):
    """a temporary function, would allow the computer to play cards 
    if playing truthfully

    Args:
        req_value (int): the turn order value
        cpu_hand (list): the cpu's hand
    
    Returns:
        cpu_play(list): the final hand of the cpu
    
    Side effects:
        will remove selected cards from CPU's hand
    """
    cpu_play = []
    while cpu_hand.count(req_value) != 0:
        cpu_play.append(cpu_hand.pop(index(req_value)))
    return(cpu_play)
        
        
def cpu_call(p_play,req_value,cpu_hand):
    """an algoritmn to guess whether or not a player is telling the truth

    Args:
        p_play (list): a list of the subsequent player's input
        req_value (int): the number the player needed to return
        cpu_hand (list): the computer's hand
    """
    cpu_call = True
    possible_options = DECK.copy()
    for i in CPU_HAND:
        possible_options.remove(i)
    
    for i in range(0,len(p_play)):
        try: 
            possible_options.remove(req_value)
        except ValueError:
            cpu_call = False
    
    if not cpu_call:
        call_bs("cpu",p_play,req_value)
    else:
        print("cpu will pass on calling bs")
        cpu_play(req_value + 1, cpu_hand)
        


    
        
    

